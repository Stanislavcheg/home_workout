.container.py-lg-5.py-md-4.py-sm-4.py-3
  .row.agile-service-grid.pt-lg-4.pt-md-4.pt-3
  .col-sm-12
    .row.justify-content-center
      %h3
        = @day.name
    - @exercises.each do |exercise|
      .row
        %h4
          = exercise.name
      .row
        %p
          = exercise.desc
      - exercise.resources.each_with_index do |resource, i|
        .row.mb-3
          - if exercise.resources.count > 1
            %p Вариант #{i + 1}
          - if resource.image?
            = image_tag(resource.name, class: 'img-fluid')
          - else
            .embed-responsive.embed-responsive-16by9
              = video_tag(resource.name, controls: true)
s
