.container.py-lg-5.py-md-4.py-sm-4.py-3
  .row.agile-service-grid.pt-lg-4.pt-md-4.pt-3
  .col-sm-12
    .row.justify-content-center
      %h3
        = @day.name
    - @day.exercises.each do |exercise|
      .row
        %h4
          = exercise.name
      .row.mb-3
        %p
          = exercise.desc
        - if exercise.file_name.present?
          - if exercise.image_tutorial?
            = image_tag(exercise.file_name, class: 'img-fluid')
          - else
            .embed-responsive.embed-responsive-16by9
              = video_tag(exercise.file_name, controls: true)





